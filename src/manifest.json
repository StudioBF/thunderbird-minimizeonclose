{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "minimize-on-close-revamped@custom",
      "strict_min_version": "128.0"
    }
  },
  "name": "Minimize on Close Revamped",
  "description": "Causes Thunderbird's main window to minimize instead of closing. Revamped for modern Thunderbird versions.",
  "version": "1.0.0",
  "author": "rsjtdrjgfuzkfg (Revamped by Fork)",
  "icons": {
    "64": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "experiment_apis": {
    "ex_windows_revamped": {
      "schema": "experiment.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "ex_windows_revamped"
          ]
        ],
        "script": "experiment.js"
      }
    }
  }
}